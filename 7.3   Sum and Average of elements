#include <iostream>
using namespace std;

int main() {
    
    int arr[] = {10, 20, 30, 40, 50};
    int n = sizeof(arr) / sizeof(arr[0]);

    int sum = 0;
    float average;

    for (int i = 0; i < n; ++i) {
        sum += arr[i];
    }
    
    average = sum / n;

    cout << "Sum of array elements: " << sum << endl;
    cout << "Average of array elements: " << average << endl;

    return 0;
}

/*  OUTPUT 
Sum of array elements: 150
Average of array elements: 30
*/  
